<div class="section-nav-top">
    <div class="left-buttons">
        <%= link_to "Home", root_path, class: "navigation-buttons" %>
        
        <% unless current_user.nil? %>
            <%= link_to "Profile", profile_index_path, class: "navigation-buttons" %>
            <%= link_to "Posts", posts_path, class: "navigation-buttons" %>
        <%end%>
    </div>
    <div class="right-buttons">
        <% unless current_user.nil? %>
            <span class="user-email"><%= current_user.email %></span>
            <%= button_to "Logout", destroy_user_session_path, method: :delete %>
        <%else%>
            <%= button_to "Login", new_user_session_path, method: :get %>
        <% end %>
        
        
    </div>
</div>